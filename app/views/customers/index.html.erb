<h1>Customers</h1>
<br>
<div class="dropdown">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter by gender
  </a>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <a class="dropdown-item" href="/customers">All</a>
    <a class="dropdown-item" href="/customers?gender=0">Male</a>
    <a class="dropdown-item" href="/customers?gender=1">Female</a>
    <a class="dropdown-item" href="/customers?gender=2">Undefined</a>
  </div>
</div>
<br>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Identification</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Phone</th>
        <th scope="col">Gender</th>
        <th scope="col">Employee</th>
        <th scope="col">Debt</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.identification %></td>
          <td><%= customer.full_name %></td>
          <td><%= customer.address %></td>
          <td><%= customer.phone %></td>
          <td><%= customer.gender %></td>
          <td><%= customer.employee.full_name %></td>
          <td><%= customer.full_debt %></td>
          <td><%= link_to 'Show', customer, class: 'btn btn-link' %></td>
          <td><%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-link' %></td>
          <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= content_tag :p, "No records found", class: "text-center" if @customers.empty? %>
</div>
<br>
<%= will_paginate @customers, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
