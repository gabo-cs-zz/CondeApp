<h1>Employees</h1>
<%= error_messages_for :employee %>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Identification</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Phone</th>
        <th scope="col">Gender</th>
        <th colspan="3" class="center">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.identification %></td>
          <td><%= employee.first_name + ' ' + employee.last_name %></td>
          <td><%= employee.address %></td>
          <td><%= employee.phone %></td>
          <td><%= employee.gender %></td>
          <td><%= link_to 'Show', employee, class: 'btn btn-link' %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-link' %></td>
          <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= will_paginate @employees, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
