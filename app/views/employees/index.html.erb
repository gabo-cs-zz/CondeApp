<h1>Employees</h1>
<br>
<div class="dropdown">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter by gender
  </a>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <a class="dropdown-item" href="/employees">All</a>
    <a class="dropdown-item" href="/employees?gender=0">Male</a>
    <a class="dropdown-item" href="/employees?gender=1">Female</a>
    <a class="dropdown-item" href="/employees?gender=2">Undefined</a>
  </div>
</div>
<br>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Identification</th>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Phone</th>
        <th scope="col">Gender</th>
        <th colspan="3" class="center">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.identification %></td>
          <td><%= employee.full_name %></td>
          <td><%= employee.address %></td>
          <td><%= employee.phone %></td>
          <td><%= employee.gender %></td>
          <td><%= link_to 'Show', employee, class: 'btn btn-link' %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-link' %></td>
          <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= will_paginate @employees, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
<p class="font-weight-light text-center"><%= page_entries_info @employees, class: "text-center" %></p>
